<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="96dp"
        android:onClick="toast"
        android:text="Llamar al Toast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCalendario"
        android:layout_width="226dp"
        android:layout_height="45dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="40dp"
        android:onClick="calendario"
        android:text="Llamar al calendario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toast" />

    <Button
        android:id="@+id/buttonReloj"
        android:layout_width="226dp"
        android:layout_height="45dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="44dp"
        android:onClick="reloj"
        android:text="Llamar al reloj"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCalendario" />

    <Button
        android:id="@+id/buttonReloj2"
        android:layout_width="226dp"
        android:layout_height="45dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="36dp"
        android:text="Llamar a notificacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReloj" />

    <Button
        android:id="@+id/buttonReloj3"
        android:layout_width="226dp"
        android:layout_height="45dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="52dp"
        android:onClick="dialogo"
        android:text="Llamar a dialogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReloj2" />
</androidx.constraintlayout.widget.ConstraintLayout>